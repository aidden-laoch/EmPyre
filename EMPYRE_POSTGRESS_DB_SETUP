mkdir ~/.EmPyre
sudo -sE su postgres
psql
createuser EmPyre -dPRS zxcvbn2
createdb --owner EmPyre empyre_db
createdb --owner Empyre empyre_test_db
exit

echo '''
# Development Database
development: &pgsql
  adapter: postgresql
  database: empyre_db
  username: EmPyre
  password: zxcvbn2
  host: localhost
  port: 5432
  pool: 5
  timeout: 5

# Production database -- same as dev
production: &production
  <<: *pgsql

# Test database -- not the same, since it gets dropped all the time
test:
  <<: *pgsql
  database: empyre_test_db
''' > ~/.EmPyre/databse.yml
